{
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
  
    "env": {
      "es6": true,
      "node": true
    },
  
    "plugins": [
      "import",
      "node",
      "promise",
      "standard"
    ],
  
    "globals": {
      "document": "readonly",
      "navigator": "readonly",
      "window": "readonly"
    },
  
    "rules": {
        "no-unused-vars": "off"
    }
  }